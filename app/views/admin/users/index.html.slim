.col-md-8.mb-5
  .card
    .card-header
      h1.d-inline.mr-3 管理者一覧
      button.btn.btn-secondary.align-text-bottom
        = link_to "管理者登録", new_admin_user_path, class: "file-link font-weight-bold"

    .card-body.table-responsive
      table.table-bordered.table
        thead
          tr
            th = User.human_attribute_name(:email)
            th = User.human_attribute_name(:role)
            th アクション
        tbody
          - @admin_users.each do |admin_user|
            tr
              td = link_to admin_user.email, admin_user_path(admin_user)
              td = admin_user.role_text
              td
                = link_to "編集", edit_admin_user_path(admin_user), class: 'btn btn-primary mr-3'
                = link_to "削除", admin_user_path(admin_user), method: :delete, data: { confirm: "ユーザ#{admin_user.email}を削除します。よろしいですか？" }, class: "btn btn-danger"
