<div class="col-md-8 mb-5">
  <div class="card">
    <div class="card-header">
      <h1 class="d-inline mr-3">管理者一覧</h1>
      <button class="btn btn-secondary align-text-bottom">
        <%= link_to "管理者登録", new_admin_operator_path, class: "file-link font-weight-bold" %>
      </button>
    </div>
    <div class="card-body table-responsive">
      <table class="table-bordered table">
        <thead>
          <tr>
            <th><%= Operator.human_attribute_name(:email) %></th>
            <th><%= Operator.human_attribute_name(:role) %></th>
            <th>アクション</th>
          </tr>
        </thead>
        <tbody>
          <% @operators.each do |operator| %>
            <tr>
              <td><%= link_to operator.email, admin_operator_path(operator) %></td>
              <td><%= operator.role_text %></td>
              <td>
                <%= link_to "編集", edit_admin_operator_path(operator), class: 'btn btn-primary mr-3' %>
                <%= link_to "削除", admin_operator_path(operator), method: :delete, data: { confirm: "ユーザ#{operator.email}を削除します。よろしいですか？" }, class: "btn btn-danger" %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
