<div class="login-form">
  <div class="card p-4">
    <div class="card_body">
      <h1>パスワードをリセットする</h1>
      <% if @operator.errors.any? %>
        <ul class="error_explanation">
          <% @operator.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      <% end %>

      <%= form_with model: @operator, url: admin_password_reset_path(params[:id]), local: true do |f| %>
        <%= hidden_field_tag :email, @operator.email %>
        <div class="form-group">
          <%= f.label :password, "パスワード" %>
          <div class="input-group md-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="cil-lock-locked c-icon"></i>
              </span>
            </div>
            <%= f.password_field :password, class: "form-control" %>
          </div>
        </div>

        <div class="form-group mb-4">
          <%= f.label :password_confirmation, "パスワード確認" %>
          <div class="input-group md-3">
            <div class="input-group-prepend">
              <span class="input-group-text">
                <i class="cil-lock-locked c-icon"></i>
              </span>
            </div>
            <%= f.password_field :password_confirmation, class: "form-control" %>
          </div>
        </div>
        <%= f.submit "パスワードを変更する", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>