<div class="contents-container col-md-6">
  <h3>記事本文</h3>
  <% if current_operator.id == @article.operator_id %>
    <%= link_to "記事を編集", edit_admin_article_path(@article), class: 'btn btn-outline-primary mr-3' %>
    <%= link_to "記事を削除", admin_article_path(@article), method: :delete, data: { confirm: "この記事を削除します。よろしいですか？" }, class: "btn btn-outline-danger" %>
  <% end %>
  <div class="contents-area mx-auto px-3">
    <div class="news">
      <div class="news-title">
        <h4 class="font-weight-bold">
          <%= @article.title %>
        </h4>
        <div class="font-italic">
          <% if @article.released_at? %>
            <p>
              <%= "公開日：#{ l @article.released_at, format: :date }" %>
            </p>
          <% else %>
            <p>公開日未定</p>
          <% end %>
        </div>
      </div>
      <div class="news-content">
        <%= simple_format(@article.content) %>
      </div>
    </div>
  </div>
</div>
