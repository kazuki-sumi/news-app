<!DOCTYPE html>
<html>
  <head>
    <title>NewsApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= javascript_pack_tag "admin", media: "all" %>
    <%= stylesheet_pack_tag "admin" %>
  </head>
  <body>
    <%= render partial: "layouts/admin_header" %>
    <div class="c-wrapper">
      <div class="row h-100">
        <div class="col-md-3">
          <%= render "layouts/sidebar" %>
        </div>
        <div class="col-md-9">
          <div class="c-body">
            <main class="c-main">
              <% flash.each do |type, message| %>
                <%= content_tag(:div, message, class: "alert alert-#{type} col-md-8") %>
              <% end %>
              <%= yield %>
            </main>
          </div>
        </div>
      </div>
    </div>
  </body>
</html>
